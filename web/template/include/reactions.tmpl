{{if .Session.IsLoggedIn}}
{{range .ReactionsCount}}
<form action="{{$.Action}}" method="POST" hx-post="{{$.Action}}" hx-target="closest article" hx-swap="outerHTML">
    {{if .Reacted}}
    <input type="hidden" name="_method" value="DELETE">
    {{end}}
    <input type="hidden" name="reaction" value="{{.Reaction}}">
    <button class="{{if .Reacted}}reacted{{end}}" style="margin: 0">
        <div class="stack">
            <span>{{.Reaction}}</span>
            <span class="muted">{{.Count}}</span>
        </div>
    </button>
</form>
{{end}}
{{else}}
{{range .ReactionsCount}}
<div class="btn stack" style="margin: 0">
    <span>{{.Reaction}}</span>
    <span class="muted">{{.Count}}</span>
</div>
{{end}}
{{end}}
